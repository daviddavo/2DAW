
var frase = prompt("Escriu una frase:");

var message ='';
var paraula = '';

for(var i = 0; i < frase.length; i++){
	
	if(frase.charAt(i) ==" "){
		
		message += paraula + " -> " + paraula.length + " lletres\n";
		
		paraula = '';
		
	} else {
		
		if(paraula.length>0){
			alert("aumenta");
			paraula+=frase.charAt(i);
		} else {
			
			paraula = frase.charAt(i);
		}
		
	} 
}

alert(message);
